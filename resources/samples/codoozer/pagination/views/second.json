{
    "id": "second",
    "wrapper": "paginator",
    "orientation": "vertical",
    "title":{
        "default":"Second",
        "es":"Dos"
    },
    "content": [
        {
            "id": "bar",
            "type": "group",
            "width": "100%",
            "height": 64,
            "background": {
                "type": "solid",
                "value": "@color.colorPrimary"
            },
            "content": [
                {
                    "id": "txtBar",
                    "type": "text",
                    "width": "100%",
                    "height": "wrap",
                    "text_align": "center",
                    "valign": "middle",
                    "font_size": "24",
                    "font": "renner",
                    "color": "@color.white",
                    "text": {
                        "default": "This is a bar",
                        "es": "Esto es una barra"
                    }
                }
            ]
        },
        {
            "id": "body",
            "type": "group",
            "width": "100%",
            "height": "fill",
            "scroll": true,
            "content": [
                {
                    "id": "imgHeader",
                    "type": "image",
                    "width": "100%",
                    "height": "wrap",
                    "file": "photo.jpg"
                },
                {
                    "id": "txtAuthor",
                    "type": "text",
                    "width": "90%",
                    "height": "wrap",
                    "halign":"center",
                    "text_align": "center",
                    "font_size": "18",
                    "font": "renner",
                    "color": "@color.colorPrimaryDark",
                    "margin": {
                        "top": 32,
                        "bottom": 32
                    },
                    "text": {
                        "default": "The author of this photo is @chris7520 (unsplash.com)",
                        "es": "El autor de esta foto es @chris7520 (unsplash.com)"
                    }
                },
                {
                    "id": "txtLorem",
                    "type": "text",
                    "width": "90%",
                    "height": "wrap",
                    "halign":"center",
                    "text_align": "start",
                    "font_size": "18",
                    "font": "renner",
                    "color": "@color.colorPrimaryDark",
                    "source": "@assets.lorem.txt"
                }]
        }
    ]
}
